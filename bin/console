#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Symfony\Component\Console\Input\ArgvInput;
use SymfonyDocsBuilder\Application;

$input       = new ArgvInput();
$version = $input->getParameterOption(['--symfony-version'], false === getenv('SYMFONY_VERSION') ? '4.1' : getenv('SYMFONY_VERSION'));
$container   = Application::createContainer($version);

$application = $container->get(Application::class);
$application->run($input);
